.book-shelf {
  text-align: justify
}

.book {
  display: inline-block;
  margin-bottom: 20rpx;
  text-align: justify;
  margin-left: 10px;
  position: relative
}

.book image{
  width: 80px;
  height: 100px
}
.book-info {
  font-size: 12px;
  color: #999;
  text-align: center;
  line-height: 2em
}
.mask {
  position: absolute;
  width: 80px;
  height: 100px;
  top: 0;
  left: 0;
  color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  background: rgba(128, 128, 128, 0.66)
}

.cancel-action {
  position: absolute;
  top: 0;
  left: 0;
  color: lawngreen
}
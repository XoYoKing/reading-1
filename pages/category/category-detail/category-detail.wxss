.category-info__container {
    height: 1050rpx
}

.category-tag, .category-min {
    padding: 10px;
    border-bottom: 1px solid #eee
}

.tag-item, .min-item {
    display: inline-block;
    margin-right: 10px;
    font-size: 14px;
    color: #777
}
.selected-active {
    color: #4ac9ff
}
.book-info {
    display: flex;
    padding: 5rpx;
    border-bottom: 1px solid #eee
}
.book-cover {
    flex: 1;
    height: 80px
}
.book-detail {
    flex: 5;
    display: flex;
    flex-direction: column;
    margin-left: 10px;
    overflow: hidden
}
.book-title {
    font-size: 14px;
    font-weight: bold;
}
.author-tag {
    margin-top: 10px;
    font-size: 12px;
    color: #888
}
.short-intro {
    white-space: nowrap;
    font-size: 12px;
    color: #888;
    text-overflow: ellipsis;
    margin-top: 10px
}
.book-follower,.book-recent {
    font-size: 12px;
    color: #888;
    margin-right: 10px;
    margin-top: 10px
}